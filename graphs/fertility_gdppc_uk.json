{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 13
    },
    "legend": {
      "labelFontSize": 12,
      "titleFontSize": 13
    },
    "title": {
      "fontSize": 16,
      "subtitleFontSize": 12
    }
  },
  "hconcat": [
    {
      "width": 800,
      "height": 500,
      "title": {
        "text": "Fertility Rate Vs. GDP per Capita in the UK",
        "subtitle": "Source: World Bank | Series: SP.DYN.TFRT.IN & NY.GDP.PCAP.CN",
        "anchor": "start"
      },
      "layer": [
    {
      "mark": {
        "type": "line",
        "tooltip": true,
        "point": {
          "filled": true,
          "size": 100,
          "opacity": 0
        }
      },
      "data": {
        "url": "https://api.worldbank.org/v2/country/GBR/indicator/SP.DYN.TFRT.IN?format=json&per_page=1000",
        "format": {"property": "[1]"}
      },
      "transform": [
        {"calculate": "'Fertility rate (births per woman)'", "as": "series"}
      ],
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "timeUnit": "year",
          "title": "",
          "axis": {"grid": false}
        },
        "y": {
          "field": "value",
          "type": "quantitative",
          "title": "Fertility rate (births per woman)",
          "axis": {"titleAngle": 270, "orient": "left"}
        },
        "color": {
          "field": "series",
          "type": "nominal",
          "scale": {
            "domain": ["Fertility rate (births per woman)", "GDP per capita (current GBP)"],
            "range": ["#4169E1", "#FF7F0E"]
          },
          "legend": null
        },
        "tooltip": [
          {"field": "date", "type": "temporal", "timeUnit": "year", "title": "Year"},
          {"field": "value", "type": "quantitative", "title": "Value"},
          {"field": "series", "type": "nominal", "title": "Series"}
        ]
      }
    },
    {
      "mark": {
        "type": "line",
        "tooltip": true,
        "point": {
          "filled": true,
          "size": 100,
          "opacity": 0
        }
      },
      "data": {
        "url": "https://api.worldbank.org/v2/country/GBR/indicator/NY.GDP.PCAP.CN?source=2&format=json&per_page=1000",
        "format": {"property": "[1]"}
      },
      "transform": [
        {"calculate": "datum.value / 10000", "as": "value_scaled"},
        {"calculate": "'GDP per capita (current GBP)'", "as": "series"}
      ],
      "encoding": {
        "x": {"field": "date", "type": "temporal", "timeUnit": "year"},
        "y": {
          "field": "value_scaled",
          "type": "quantitative",
          "axis": {
            "titleAngle": 90,
            "orient": "right",
            "labelExpr": "format(datum.value * 10000, ',')",
            "title": "GDP per capita (current GBP)"
          }
        },
        "color": {"field": "series", "type": "nominal", "legend": null},
        "tooltip": [
          {"field": "date", "type": "temporal", "timeUnit": "year", "title": "Year"},
          {"field": "value", "type": "quantitative", "title": "Value (US$)", "format": ",.2f"},
          {"field": "series", "type": "nominal", "title": "Series"}
        ]
      }
    }
  ],
  "resolve": {
    "scale": {"y": "shared"},
    "axis": {"y": "independent"}
  }
},
{
  "width": 180,
  "height": 500,
  "view": {"stroke": null},
  "layer": [
    {
      "data": {"values": [{"x": 10, "y": 480, "label": "Legend"}]},
      "mark": {"type": "text", "align": "left", "fontSize": 15, "fontWeight": "bold"},
      "encoding": {
        "x": {"field": "x", "type": "quantitative", "scale": {"domain": [0, 180]}, "axis": null},
        "y": {"field": "y", "type": "quantitative", "scale": {"domain": [0, 500]}, "axis": null},
        "text": {"field": "label", "type": "nominal"}
      }
    },
    {
      "data": {"values": [{"x1": 10, "x2": 40, "y": 458}]},
      "mark": {"type": "rule", "color": "#4169E1", "strokeWidth": 2},
      "encoding": {
        "x": {"field": "x1", "type": "quantitative", "scale": {"domain": [0, 180]}, "axis": null},
        "x2": {"field": "x2"},
        "y": {"field": "y", "type": "quantitative", "scale": {"domain": [0, 500]}, "axis": null}
      }
    },
    {
      "data": {"values": [{"x": 45, "y": 458, "label": "Fertility rate"}]},
      "mark": {"type": "text", "align": "left", "fontSize": 12},
      "encoding": {
        "x": {"field": "x", "type": "quantitative", "scale": {"domain": [0, 180]}, "axis": null},
        "y": {"field": "y", "type": "quantitative", "scale": {"domain": [0, 500]}, "axis": null},
        "text": {"field": "label", "type": "nominal"}
      }
    },
    {
      "data": {"values": [{"x1": 10, "x2": 40, "y": 436}]},
      "mark": {"type": "rule", "color": "#FF7F0E", "strokeWidth": 2},
      "encoding": {
        "x": {"field": "x1", "type": "quantitative", "scale": {"domain": [0, 180]}, "axis": null},
        "x2": {"field": "x2"},
        "y": {"field": "y", "type": "quantitative", "scale": {"domain": [0, 500]}, "axis": null}
      }
    },
    {
      "data": {"values": [{"x": 45, "y": 436, "label": "GDP per capita"}]},
      "mark": {"type": "text", "align": "left", "fontSize": 12},
      "encoding": {
        "x": {"field": "x", "type": "quantitative", "scale": {"domain": [0, 180]}, "axis": null},
        "y": {"field": "y", "type": "quantitative", "scale": {"domain": [0, 500]}, "axis": null},
        "text": {"field": "label", "type": "nominal"}
      }
    }
  ]
}
]
}
