{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 13
    },
    "legend": {
      "labelFontSize": 12,
      "titleFontSize": 13
    },
    "title": {
      "fontSize": 16,
      "subtitleFontSize": 12
    }
  },
  "hconcat": [
    {
      "width": 800,
      "height": 500,
      "title": {
        "text": "Unemployment Rate in the UK Vs. in Other Countries",
        "subtitle": "Source: World Bank | Series: SL.UEM.TOTL.ZS | Click on a line to isolate",
        "anchor": "start"
      },
      "data": {
        "url": "https://api.worldbank.org/v2/country/GBR;EU;USA;KOR/indicator/SL.UEM.TOTL.ZS?format=json&per_page=3000",
        "format": {"property": "[1]"}
      },
      "transform": [
        {
          "calculate": "datum.country && datum.country.value ? datum.country.value : datum.country",
          "as": "country_name"
        },
        {
          "filter": "datum.value != null && datum.date != null && datum.country_name != null"
        }
      ],
      "params": [
        {
          "name": "selector",
          "select": {
            "type": "point",
            "fields": ["country_name"],
            "on": "click",
            "toggle": true
          }
        }
      ],
      "mark": {
        "type": "line",
        "tooltip": true,
        "strokeWidth": 2,
        "point": {
          "filled": true,
          "size": 100,
          "opacity": 0
        }
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "timeUnit": "year",
          "title": "",
          "axis": {"grid": false}
        },
        "y": {
          "field": "value",
          "type": "quantitative",
          "title": "Unemployment rate (%)",
          "axis": {"titleAngle": 270}
        },
        "color": {
          "field": "country_name",
          "type": "nominal",
          "scale": {
            "domain": [
              "United Kingdom",
              "European Union",
              "United States",
              "Korea, Rep."
            ],
            "range": ["#4169E1", "#e41a1c", "#FFA500", "#984ea3"]
          },
          "legend": null
        },
        "tooltip": [
          {"field": "country_name", "type": "nominal", "title": "Country"},
          {
            "field": "date",
            "type": "temporal",
            "timeUnit": "year",
            "title": "Year"
          },
          {"field": "value", "type": "quantitative", "title": "Unemployment (%)"}
        ]
      }
    },
    {
      "width": 180,
      "height": 500,
      "view": {"stroke": null},
      "layer": [
        {
          "data": {"values": [{"x": 10, "y": 480, "label": "Legend"}]},
          "mark": {"type": "text", "align": "left", "fontSize": 15, "fontWeight": "bold"},
          "encoding": {
            "x": {"field": "x", "type": "quantitative", "scale": {"domain": [0, 180]}, "axis": null},
            "y": {"field": "y", "type": "quantitative", "scale": {"domain": [0, 500]}, "axis": null},
            "text": {"field": "label", "type": "nominal"}
          }
        },
        {
          "data": {"values": [{"x1": 10, "x2": 40, "y": 458}]},
          "mark": {"type": "rule", "color": "#4169E1", "strokeWidth": 2},
          "encoding": {
            "x": {"field": "x1", "type": "quantitative", "scale": {"domain": [0, 180]}, "axis": null},
            "x2": {"field": "x2"},
            "y": {"field": "y", "type": "quantitative", "scale": {"domain": [0, 500]}, "axis": null}
          }
        },
        {
          "data": {"values": [{"x": 45, "y": 458, "label": "United Kingdom"}]},
          "mark": {"type": "text", "align": "left", "fontSize": 12},
          "encoding": {
            "x": {"field": "x", "type": "quantitative", "scale": {"domain": [0, 180]}, "axis": null},
            "y": {"field": "y", "type": "quantitative", "scale": {"domain": [0, 500]}, "axis": null},
            "text": {"field": "label", "type": "nominal"}
          }
        },
        {
          "data": {"values": [{"x1": 10, "x2": 40, "y": 436}]},
          "mark": {"type": "rule", "color": "#e41a1c", "strokeWidth": 2},
          "encoding": {
            "x": {"field": "x1", "type": "quantitative", "scale": {"domain": [0, 180]}, "axis": null},
            "x2": {"field": "x2"},
            "y": {"field": "y", "type": "quantitative", "scale": {"domain": [0, 500]}, "axis": null}
          }
        },
        {
          "data": {"values": [{"x": 45, "y": 436, "label": "European Union"}]},
          "mark": {"type": "text", "align": "left", "fontSize": 12},
          "encoding": {
            "x": {"field": "x", "type": "quantitative", "scale": {"domain": [0, 180]}, "axis": null},
            "y": {"field": "y", "type": "quantitative", "scale": {"domain": [0, 500]}, "axis": null},
            "text": {"field": "label", "type": "nominal"}
          }
        },
        {
          "data": {"values": [{"x1": 10, "x2": 40, "y": 414}]},
          "mark": {"type": "rule", "color": "#FFA500", "strokeWidth": 2},
          "encoding": {
            "x": {"field": "x1", "type": "quantitative", "scale": {"domain": [0, 180]}, "axis": null},
            "x2": {"field": "x2"},
            "y": {"field": "y", "type": "quantitative", "scale": {"domain": [0, 500]}, "axis": null}
          }
        },
        {
          "data": {"values": [{"x": 45, "y": 414, "label": "United States"}]},
          "mark": {"type": "text", "align": "left", "fontSize": 12},
          "encoding": {
            "x": {"field": "x", "type": "quantitative", "scale": {"domain": [0, 180]}, "axis": null},
            "y": {"field": "y", "type": "quantitative", "scale": {"domain": [0, 500]}, "axis": null},
            "text": {"field": "label", "type": "nominal"}
          }
        },
        {
          "data": {"values": [{"x1": 10, "x2": 40, "y": 392}]},
          "mark": {"type": "rule", "color": "#984ea3", "strokeWidth": 2},
          "encoding": {
            "x": {"field": "x1", "type": "quantitative", "scale": {"domain": [0, 180]}, "axis": null},
            "x2": {"field": "x2"},
            "y": {"field": "y", "type": "quantitative", "scale": {"domain": [0, 500]}, "axis": null}
          }
        },
        {
          "data": {"values": [{"x": 45, "y": 392, "label": "Korea, Rep."}]},
          "mark": {"type": "text", "align": "left", "fontSize": 12},
          "encoding": {
            "x": {"field": "x", "type": "quantitative", "scale": {"domain": [0, 180]}, "axis": null},
            "y": {"field": "y", "type": "quantitative", "scale": {"domain": [0, 500]}, "axis": null},
            "text": {"field": "label", "type": "nominal"}
          }
        }
      ]
    }
  ]
}
