{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 13
    },
    "legend": {
      "labelFontSize": 12,
      "titleFontSize": 13
    },
    "title": {
      "fontSize": 16,
      "subtitleFontSize": 12
    }
  },
  "width": 800,
  "height": 500,
  "title": {
    "text": "USA Weekly Wage",
    "subtitle": "Weekly real earnings | Source: FRED through ECO API",
    "anchor": "start"
  },
  "data": {
    "url": "https://api.economicsobservatory.com/usa/wage?vega",
    "format": {
      "type": "json"
    }
  },
  "mark": {
    "type": "line",
    "color": "#4169e1",
    "strokeWidth": 2,
    "tooltip": true,
    "point": {
      "filled": true,
      "size": 100,
      "opacity": 0
    }
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": "",
      "axis": {"grid": false}
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": "Dollars (1982-84 CPI Adj.)",
      "axis": {"titleAngle": 270}
    },
    "tooltip": [
      {"field": "date", "type": "temporal", "title": "Date"},
      {"field": "value", "type": "quantitative", "title": "Weekly Wage ($)", "format": ".2f"}
    ]
  }
}
