{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": "Unemployment rate â€” click on the lines to isolate",
  "width": 720,
  "height": 420,
  "data": {
    "url": "https://api.worldbank.org/v2/country/GBR;FRA;DEU;KOR;USA;CH;IND;IT;ESP/indicator/SL.UEM.TOTL.ZS?format=json&per_page=3000",
    "format": {"property": "[1]"}
  },
  "transform": [
    {
      "calculate": "datum.country && datum.country.value ? datum.country.value : datum.country",
      "as": "country_name"
    },
    {
      "filter": "datum.value != null && datum.date != null && datum.country_name != null"
    }
  ],
  "params": [
    {
      "name": "selector",
      "select": {
        "type": "point",
        "fields": ["country_name"],
        "on": "click",
        "toggle": true
      }
    }
  ],
  "mark": {"type": "line", "tooltip": true},
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "timeUnit": "year",
      "title": "Year",
      "axis": {"grid": false}
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": "Unemployment rate (%)",
      "axis": {"titleAngle": 270}
    },
    "color": {
      "field": "country_name",
      "type": "nominal",
      "title": "Country",
      "legend": {"orient": "bottom", "direction": "horizontal"}
    },
    "opacity": {
      "condition": {"param": "selector", "empty": "all", "value": 1},
      "value": 0.15
    },
    "tooltip": [
      {"field": "country_name", "type": "nominal", "title": "Country"},
      {
        "field": "date",
        "type": "temporal",
        "timeUnit": "year",
        "title": "Year"
      },
      {"field": "value", "type": "quantitative", "title": "Unemployment (%)"}
    ]
  },
  "config": {}
}